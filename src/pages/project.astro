---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description="BLOG" />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li time {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
    </style>
  </head>

  <main id="project" class="w-[70%] inline-flex flex-col">
    <h1 class="font-black text-4xl py-10">Project</h1>
    <section>
      <ul
        class="rounded-3xl bg-black bg-opacity-30 grid grid-cols-2 mobile:grid-cols-none place-content-center"
      >
        {
          posts.map((post) => (
            <li class="p-5 inline-flex flex-col">
              <div class="p-2 self-start">
                <a href={post.url}>
                <p class="text-xl font-bold">{post.frontmatter.title}</p>
                </a>
                <time datetime={post.frontmatter.pubDate}>
                  {new Date(post.frontmatter.pubDate).toDateString()}
                </time>
              </div>
              <div class="m-2 p-2 bg-gray-700 rounded-t-xl text-white">
<p>{post.frontmatter.description}</p>
              </div>
             <a href={post.url}>
                <img
                  alt="titleImage"
                  width={720 * 2}
                  class="border rounded-xl border-white"
                  src={post.frontmatter.heroImage}
                />
             </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>


</html>
